<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.monmonja.library.views.MonmonjaAppsView"
    >
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_medium"
        />
    <!-- android:layout_toEndOf="@+id/app_logo" -->
    <TextView
        android:id="@+id/app_name"
        android:layout_toRightOf="@+id/app_logo"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        style="?android:textAppearanceLarge"
        />
    <TextView
        android:id="@+id/app_description"
        android:layout_toRightOf="@+id/app_logo"
        android:layout_below="@+id/app_name"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        style="?android:textAppearanceSmall"
        />
    <LinearLayout
        android:id="@+id/action_linear_layout"
        android:layout_below="@+id/app_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/app_logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_small"
        >
        <ImageButton
            android:id="@+id/playstore_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/playstore"
            style="?android:borderlessButtonStyle"
            android:visibility="gone"
            />
        <ImageButton
            android:id="@+id/appstore_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/appstore"
            style="?android:borderlessButtonStyle"
            android:visibility="gone"
            />
    </LinearLayout>
    <View
        android:layout_below="@+id/action_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:background="#1F000000"
        />
</merge>